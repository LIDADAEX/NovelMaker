/* --- 全局基础 (Global) --- */
QWidget {
    background-color: #1e1b24;       /* 深渊暗紫底色 */
    color: #cccccc;                  /* 主字体颜色 */
    font-family: @fontFamilies;
    font-size: @fontSize;
    font-weight: @fontWeight;
    line-height: @fontLineHeight;
    selection-background-color: #a0467f; 
    selection-color: #ffffff;
    outline: none;
}