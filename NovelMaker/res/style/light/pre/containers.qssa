/* --- 分组框 (QGroupBox) --- */
QGroupBox {
    border: 1px solid #dcd5e0;
    border-radius: 6px;
    margin-top: 24px;
    padding-top: 10px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    top: 2px;
    color: #b04085;                  /* 标题用深粉色，比浅粉更易读 */
    font-weight: bold;
    background-color: #f7f5f9;       /* 遮挡边框，要和全局背景一致 */
    padding: 0 5px;
}